#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#define MAX_item 100

int main() {
	int count, id;

	int store[MAX_item] = { 0 }; //입고수량
	int sell[MAX_item] = { 0 }; //핀매수량
	int jaego[MAX_item] = { 0 }; //재고수량
	int all_sell[1] = {0}; //전체판매
	int all_store[1] = {0}; //전체입고

	printf("상품개수 ");
	scanf("%d", &count);
    
    printf("입고수량을 입력하시오 ");
	for (int i = 0; i < count; i++) {
		scanf("%d", &store[i]);
		all_store[0] = all_store[0] + store[i];
	}
	
    
    printf("판매수량을 입력하시오 ");
	for (int i = 0; i < count; i++) {
		scanf("%d", &sell[i]);
	}

	for (int i = 0; i < count; i++) {
		jaego[i] = store[i] - sell[i];
	}

	printf("id를 입력하세요 ");
	scanf("%d", &id);
	printf("%d의 재고수량 : %d", id, jaego[id]);
    
    printf("\n");
    
	printf("모든 제품의 재고 수량 ");
	for (int i = 0; i < count; i++) {
		printf("%d ", jaego[i]);
	}
	
	printf("\n");
	
	printf("전체 판매량 ");
	for(int i =0; i<count; i++) {
	    all_sell[0] = all_sell[0] + sell[i];
	
	}
	
	printf("%d", all_sell[0]);
	printf("\t");
	int sale_rate = (all_sell[0]/all_store[0])*100;
	printf("판매율 %d", sale_rate);
	
	for(int i = 0; i < count; i++) {
	    if(sell[i] > sell[i+1]) {
	        
	    }
	}
	
	
	printf("가장 많이 판매된 상품 : ID %d, 판매량 %d \n", );
    printf("가장 적게 판매된 상품 : ID %d, 판매량 %d \n", );
	
}
