#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#define MAX_item 100

int main() {
	int count, id;

	int store[MAX_item] = { 0 };
	int sell[MAX_item] = { 0 };
	int jaego[MAX_item] = { 0 };

	printf("상품개수 ");
	scanf("%d", &count);

	for (int i = 0; i < count; i++) {
		printf("입고수량을 입력하시오 ");
		scanf("%d", &store[i]);
	}

	for (int i = 0; i < count; i++) {
		printf("판매수량을 입력하시오 ");
		scanf("%d", &sell[i]);
	}

	for (int i = 0; i < count; i++) {
		jaego[i] = store[i] - sell[i];
	}

	printf("id를 입력하세요 ");
	scanf("%d", &id);
	printf("%d의 재고수량 : %d", id, jaego[id]);

	printf("모든 제품의 재고 수량 ");
	for (int i = 0; i < count; i++) {
		printf("%d ", jaego[i]);
	}
	
}
